.loading
  text-align center
  padding 50px 0 0 0
.info
  text-align center
  color #aaa
  font-size 12px
  height 30px
  margin -@height 0 0 0
  line-height @height
  & > span
    margin 0 2px
    & > a
      color #aaa

.ribbon
  display none

@media (max-width: 1000px)
  .ribbon
    display none

.message
  border-radius 2px
  color #aaa
  size 100% auto
  text-align center
  font-size 12px
  padding 10px 30px
  margin 0 0 -32px 0
  relative top -8px

.clear-cache
  color rgb(43, 123, 185)
  text-decoration none
  margin 0 2px
