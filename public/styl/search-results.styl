.search-results-covers
  max-width 1000px
  margin auto
  padding 20px 0 40px 0
  @media (max-width: 1000px)
    padding 80px 10px 40px 10px
    text-align center
    line-height 0
.no-results
  text-align center
  margin 50px 0 0 0
.cover
  display inline-block
  size 200px
  text-align center
  float left
  transition all .2s
  @media (max-width: 1000px)
    float none
    margin 6px
  &:hover
    position relative
    z-index 1
    transform scale(1.01)
    box-shadow 0 0 2px #000
  .cover-link
    display block
    size @width
    box-shadow 0 0 2px #222 inset
  .cover-img
    size 200px
    position relative
    z-index -1
  .title
    box-sizing border-box
    display block
    size 100% 40px
    color #fff
    background alpha(#000, 0.8)
    font-size 12px
    overflow ellipsis
    margin (- @height) 0 0 0
    line-height @height
    position relative
    padding 0 10px
    text-decoration none

  &.first-result
    size @width * 2
    .cover-link
      size @width
    .cover-img
      size @width

  @media (max-width: 1000px)
    &, &.first-result
      size 100px
      .cover-link
        size 100px
      .cover-img
        size 100px
.templates
  clear both
  padding 40px 0 0 0
