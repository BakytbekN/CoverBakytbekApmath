.search-results-covers
  max-width 1000px
  margin auto
  padding 20px 0 40px 0
  @media (max-width: 1000px)
    padding 80px 10px 40px 10px
    text-align center
    line-height 0
.cover
  display inline-block
  size 200px
  text-align center
  padding 10px
  float left
  transition all .2s
  @media (max-width: 1000px)
    float none
    margin 6px
  &:hover
    background #fff
    box-shadow 0 0 4px #aaa
  .cover-link
    display block
    size 100%
  .cover-img
    size 100%
  .title
    box-sizing border-box
    display block
    size 100% 40px
    color #fff
    background alpha(#000, 0.8)
    font-size 12px
    overflow ellipsis
    margin (- @height) 0 0 0
    line-height @height
    position relative
    padding 0 10px
    text-decoration none

  &.first
    size @width * 2

  @media (max-width: 1000px)
    &, &.first
      size 100px
      .cover-link
        size 100px
      .cover-img
        size 100px
.templates
  clear both
  padding 40px 0 0 0
