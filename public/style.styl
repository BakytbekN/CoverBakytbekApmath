@import '../node_modules/nib/index'

body
  font-family 'Helvetica Neue', Helvetica, Roboto, Arial, 'Hiragino Sans GB', 'Heiti SC', 'Source Han Sans CN', 'WenQuanYi Micro Hei', sans-serif
  background #E8E8EA
body.notinited
  .search-form
    transition none
    .logo
      transition none
.search-form
  text-align center
  font-size 16px
  padding 40px 0 20px 0
  transition margin .4s
  .logo
    size 100px 65px
    absolute top 20px left 50%
    line-height 0
    margin 0 0 0 -500px
    padding 20px 0 0 0
    transition all .4s
    transform rotate(360deg * 2)
    .dot
      size 30px
      display block
      border-radius 50%
      display inline-block
      position relative
    .madoka
      top -20px
    .homura
      left 5px
    .mami
      right 5px
  .query, .scope, .submit
    border none
    outline none
    padding 10px
    box-shadow 0 0 2px #ddd
    vertical-align middle
    transition box-shadow .2s
    max-width 100%
    &:focus
      box-shadow 0 0 4px #ccc
  .query
    size 380px 20px
  .scope
    size auto 40px
    margin 0 0 0 20px
  .submit
    font-family 'Helvetica Neue', Helvetica, Roboto, Arial, 'Hiragino Sans GB', 'Heiti SC', 'Source Han Sans CN', 'WenQuanYi Micro Hei', sans-serif
    size 100px 40px
    font-size 12px
    background #2B7BB9
    color #fff
    margin 0 0 0 20px
    outline none
    border 1px solid transparent
    transition all .1s
    &:active
      border 1px solid lighten(blue, 60%)
      transform scale(.98)
      width 100%
      display block
      margin 5px 0 0 0
  @media (max-width: 1000px)
    .query, .scope, .submit
      width 100%
      display block
      margin 5px 0 0 0

  &.empty
    margin 240px 0 0 0
    .logo
      top 140px
      margin 0 0 0 -50px
      transform rotate(0)

.search-results
  max-width 1000px
  margin auto
  padding 20px 0 40px 0
.no-results
  text-align center
  margin 50px 0 0 0
.result
  display inline-block
  size 200px
  text-align center
  float left
  transition all .2s
  &:hover
    position relative
    z-index 1
    transform scale(1.01)
    box-shadow 0 0 2px #000
  .cover-link
    display block
    size @width
    box-shadow 0 0 2px #222 inset
  .cover-img
    size 200px
    position relative
    z-index -1
  .title
    box-sizing border-box
    display block
    size 100% 40px
    color #fff
    background alpha(#000, 0.8)
    font-size 12px
    overflow ellipsis
    margin (- @height) 0 0 0
    line-height @height
    position relative
    padding 0 10px
    text-decoration none

  &.first-result
    size @width * 2
    .cover-link
      size @width
    .cover-img
      size 200px * 2
.templates
  clear both
  padding 40px 0 0 0

.info
  fixed right 10px bottom 10px
  text-align right
.contact-me
  color #e8e8ea
  font-weight bold
  text-decoration none
  background darken(@color, 6%)
  font-size 12px
  line-height @height
  text-align center
  border-radius 4px
  padding 2px 8px
  margin 0 4px 0 0
